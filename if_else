day = input("enter day").lower()
if day .startswith("mon"):
    print("this is the first day of week")
elif day.startswith("tue"):
    print("this is the second day of the week")
elif day.startswith("wed"):
    print("this is the third day of the week")
elif day.startswith("thu"):
    print("this is the fourth day of the week")
elif day.startswith("fri"):
    print("this is the fifth day of the week")
elif day.startswith("sat"):
    print("this is the sixth day of the week")
elif day.startswith("sun"):
    print("this is the seventh day of the week")
else:
    print("given day is not a valid day")


